<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <StartupObject>RPSLSpock.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\lizard.png" />
    <None Remove="Assets\paper.png" />
    <None Remove="Assets\Rock.png" />
    <None Remove="Assets\Scissors.png" />
    <None Remove="Assets\spock.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\lizard.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\paper.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Rock.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Scissors.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\spock.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
