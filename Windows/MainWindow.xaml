<Window x:Class="RPSLSpock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPSLSpock"
        mc:Ignorable="d"
        FontFamily="Corbel"
        FontSize="30"
        Foreground="Black"
        FontWeight="Bold"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Corbel"/>
        </Style>
    </Window.Resources>
    <Grid Background="LightGray">
        <TextBlock HorizontalAlignment="Center" Margin="25">Rock, Paper, Scissors, Lizard, Spock</TextBlock>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Background="#344" Click="Button_Click">
            <Label Content="Start"/>
        </Button>        
    </Grid>
</Window>
