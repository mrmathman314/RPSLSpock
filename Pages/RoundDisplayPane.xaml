<Page x:Class="RPSLSpock.Pages.RoundDisplayPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPSLSpock.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoundDisplayPane">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value="Corbel"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Label FontFamily="Corbel" FontSize="45" FontWeight="Bold" Content="{Binding Outcome}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button VerticalAlignment="Bottom" Width="Auto" HorizontalAlignment="Center" Margin="10" Click="Button_Click">
            <Label>New Round</Label>
        </Button>
    </Grid>
</Page>
